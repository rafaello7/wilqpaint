<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <menu id="menuBar">
        <submenu>
            <attribute name="label">_File</attribute>
            <section>
                <item>
                    <attribute name="label">_New</attribute>
                    <attribute name="action">win.new</attribute>
                    <attribute name="accel">&lt;Primary&gt;n</attribute>
                </item>
                <item>
                    <attribute name="label">_Open</attribute>
                    <attribute name="action">win.open</attribute>
                    <attribute name="accel">&lt;Primary&gt;o</attribute>
                </item>
                <item>
                    <attribute name="label">_From Clipboard</attribute>
                    <attribute name="action">win.from-clipboard</attribute>
                    <attribute name="accel">&lt;Primary&gt;v</attribute>
                </item>
                <item>
                    <attribute name="label">_Save</attribute>
                    <attribute name="action">win.save</attribute>
                    <attribute name="accel">&lt;Primary&gt;s</attribute>
                </item>
                <item>
                    <attribute name="label">Save _As...</attribute>
                    <attribute name="action">win.saveas</attribute>
                </item>
                <item>
                    <attribute name="label">_To Clipboard</attribute>
                    <attribute name="action">win.to-clipboard</attribute>
                    <attribute name="accel">&lt;Primary&gt;c</attribute>
                </item>
            </section>
            <section>
                <item>
                    <attribute name="label">_Quit</attribute>
                    <attribute name="action">win.quit</attribute>
                    <attribute name="accel">&lt;Primary&gt;q</attribute>
                </item>
            </section>
        </submenu>
        <submenu>
            <attribute name="label">_Edit</attribute>
            <section>
                <item>
                    <attribute name="label">_Undo</attribute>
                    <attribute name="action">win.edit-undo</attribute>
                    <attribute name="accel">&lt;Primary&gt;z</attribute>
                </item>
                <item>
                    <attribute name="label">_Redo</attribute>
                    <attribute name="action">win.edit-redo</attribute>
                    <attribute name="accel">&lt;Primary&gt;y</attribute>
                </item>
            </section>
            <section>
                <item>
                    <attribute name="label">_Scale Image</attribute>
                    <attribute name="action">win.image-scale</attribute>
                </item>
                <submenu>
                    <attribute name="label">_Rotate</attribute>
                    <section>
                        <item>
                            <attribute name="label">180 degree</attribute>
                            <attribute name="action">win.rotate180</attribute>
                        </item>
                    </section>
                </submenu>
                <item>
                    <attribute name="label">_Convert to Black and White</attribute>
                    <attribute name="action">win.image-threshold</attribute>
                </item>
            </section>
        </submenu>
        <submenu>
            <attribute name="label">_View</attribute>
            <section>
                <item>
                    <attribute name="label">Grid and Snap Options</attribute>
                    <attribute name="action">win.grid-options</attribute>
                </item>
                <item>
                    <attribute name="label">Show Grid</attribute>
                    <attribute name="action">win.grid-show</attribute>
                </item>
                <submenu>
                    <attribute name="label">_Snap</attribute>
                    <section>
                        <item>
                            <attribute name="label">none (0px)</attribute>
                            <attribute name="action">win.snap</attribute>
                            <attribute name="target">0px</attribute>
                        </item>
                        <item>
                            <attribute name="label">0.5px</attribute>
                            <attribute name="action">win.snap</attribute>
                            <attribute name="target">0.5px</attribute>
                        </item>
                        <item>
                            <attribute name="label">1px corner</attribute>
                            <attribute name="action">win.snap</attribute>
                            <attribute name="target">1pxCorner</attribute>
                        </item>
                        <item>
                            <attribute name="label">1px center (+0.5px offset right and down)</attribute>
                            <attribute name="action">win.snap</attribute>
                            <attribute name="target">1pxCenter</attribute>
                        </item>
                        <item>
                            <attribute name="label">to grid</attribute>
                            <attribute name="action">win.snap</attribute>
                            <attribute name="target">toGrid</attribute>
                        </item>
                    </section>
                </submenu>
            </section>
        </submenu>
        <submenu>
            <attribute name="label">_Help</attribute>
            <section>
                <item>
                    <attribute name="label">_About</attribute>
                    <attribute name="action">win.help-about</attribute>
                </item>
            </section>
        </submenu>
    </menu>
</interface>
